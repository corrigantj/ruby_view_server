<html >
<head>
	<link rel="stylesheet" href="http://railsgirls.com/assets/bootstrap.css">
</head>

<body>
	<div class="container">
		<h1> Hello</h1>

		<p>
  			The time is now:
  			<%= Time.now %>
		</p>
		<ul>
  			<% ['apples', 'oranges', 'bananas'].each do |fruit| %>
    			<li>I like to eat <%= fruit %></li>
  			<% end %>
		</ul>
		<h2>These are the Corrigan Kids</h2>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Name:</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% ['Travis', 'Chelsea', 'Elizabeth'].each do |name| %>
						<td><%= name %></td>
					<% end %>
				</tr>
			</tbody>
		</table>
		<br>
		<h2> These are their Ages</h2>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Name:</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% ['25', '23', '21'].each do |age| %>
						<td><%= age %></td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
	</body>
	</html>
